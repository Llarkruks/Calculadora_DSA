<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- DISPLAY -->
    <TextView
        android:id="@+id/txtDisplay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="32sp"
        android:gravity="end"
        android:padding="16dp"
        android:background="#EEEEEE"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- FILA NÚMEROS 0..4 -->
    <Button
        android:id="@+id/button0"
        android:text="0"
        android:backgroundTint="#FF9800"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/txtDisplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button1"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <Button
        android:id="@+id/button1"
        android:text="1"
        android:backgroundTint="#FF9800"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="@id/button0"
        app:layout_constraintStart_toEndOf="@id/button0"
        app:layout_constraintEnd_toStartOf="@id/button2"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/button2"
        android:text="2"
        android:backgroundTint="#FF9800"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="@id/button0"
        app:layout_constraintStart_toEndOf="@id/button1"
        app:layout_constraintEnd_toStartOf="@id/button3"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/button3"
        android:text="3"
        android:backgroundTint="#FF9800"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="@id/button0"
        app:layout_constraintStart_toEndOf="@id/button2"
        app:layout_constraintEnd_toStartOf="@id/button4"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/button4"
        android:text="4"
        android:backgroundTint="#FF9800"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="@id/button0"
        app:layout_constraintStart_toEndOf="@id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"/>

    <!-- FILA NÚMEROS 5..9 -->
    <Button
        android:id="@+id/button5"
        android:text="5"
        android:backgroundTint="#FF9800"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/button0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button6"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <Button
        android:id="@+id/button6"
        android:text="6"
        android:backgroundTint="#FF9800"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="@id/button5"
        app:layout_constraintStart_toEndOf="@id/button5"
        app:layout_constraintEnd_toStartOf="@id/button7"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/button7"
        android:text="7"
        android:backgroundTint="#FF9800"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="@id/button5"
        app:layout_constraintStart_toEndOf="@id/button6"
        app:layout_constraintEnd_toStartOf="@id/button8"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/button8"
        android:text="8"
        android:backgroundTint="#FF9800"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="@id/button5"
        app:layout_constraintStart_toEndOf="@id/button7"
        app:layout_constraintEnd_toStartOf="@id/button9"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/button9"
        android:text="9"
        android:backgroundTint="#FF9800"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="@id/button5"
        app:layout_constraintStart_toEndOf="@id/button8"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"/>

    <!-- FILA OPERACIONES (+, -, x, /) -->
    <Button
        android:id="@+id/button15"
        android:text="+"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/button5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button18"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <Button
        android:id="@+id/button18"
        android:text="-"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="@id/button15"
        app:layout_constraintStart_toEndOf="@id/button15"
        app:layout_constraintEnd_toStartOf="@id/button17"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"/>

    <Button
        android:id="@+id/button17"
        android:text="x"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="@id/button15"
        app:layout_constraintStart_toEndOf="@id/button18"
        app:layout_constraintEnd_toStartOf="@id/button16"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"/>

    <Button
        android:id="@+id/button16"
        android:text="/"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="@id/button15"
        app:layout_constraintStart_toEndOf="@id/button17"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"/>

    <!-- FILA TRIG (sin, cos, tan) -->
    <Button
        android:id="@+id/button22"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:text="sin"
        app:layout_constraintEnd_toStartOf="@id/button21"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button15" />

    <Button
        android:id="@+id/button21"
        android:text="cos"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="@id/button22"
        app:layout_constraintStart_toEndOf="@id/button22"
        app:layout_constraintEnd_toStartOf="@id/button20"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"/>

    <Button
        android:id="@+id/button20"
        android:text="tan"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="@id/button22"
        app:layout_constraintStart_toEndOf="@id/button21"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"/>

    <!-- IGUAL (=) + CLEAR -->
    <Button
        android:id="@+id/button19"
        android:text="="
        android:layout_width="120dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toBottomOf="@id/button22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:backgroundTint="#8BC34A"/>

    <Button
        android:id="@+id/buttonClear"
        android:text="C"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBaseline_toBaselineOf="@id/button19"
        app:layout_constraintStart_toEndOf="@id/button19"
        android:layout_marginStart="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
